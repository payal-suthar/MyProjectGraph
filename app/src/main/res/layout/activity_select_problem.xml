<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/layout_Problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_50dp"
        android:layout_marginStart="@dimen/size_20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select and Report Your Problem"
            android:textColor="@color/white"
            android:layout_weight="0.4"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            app:fontFamily="@font/roboto_medium"
            android:padding="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginStart="@dimen/size_30dp"/>

        <ImageView
            android:id="@+id/img_BackArrow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:layout_gravity="end"
            android:layout_weight="1.6"
            android:src="@drawable/ic_backarrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/img_OnFire"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150dp"
            android:src="@drawable/not_work"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/img_NotWarning"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/machien_fire" />


            <ImageView
                android:layout_weight="1"
                android:id="@+id/img_Need"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_150dp"
                android:src="@drawable/problem_icons"
                android:scaleType="fitCenter"/>



    </LinearLayout>

</RelativeLayout>