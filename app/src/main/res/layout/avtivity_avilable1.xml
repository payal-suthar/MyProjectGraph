<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:weightSum="2"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_margin="@dimen/size_5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_info"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_error_black_24dp" />


            <ImageView
                android:id="@+id/img_problem"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_report_problem_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:weightSum="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tap Here to Access"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/size_20dp"
                android:layout_weight="1.2"
                android:textAllCaps="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/touch"
                    android:id="@+id/img_Touch"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="0.8">
                <TextView
                    android:id="@+id/txt_Time"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/raleway_semibold"
                    app:fontFamily="@font/raleway_semibold"
                    android:text="11:25"
                    android:textAlignment="center"
                    android:textSize="35dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txt_Day"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    app:fontFamily="@font/roboto_regular"
                    android:text="January 13,Monday"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:id="@+id/txt_VerticalBand"
                android:textSize="@dimen/size_24dp"
                android:text="Vertical Band Saw"/>

            <TextView
                android:id="@+id/txt_Status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txt_VerticalBand"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginBottom="@dimen/size_5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp"
                app:fontFamily="@font/roboto_medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.2">

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

