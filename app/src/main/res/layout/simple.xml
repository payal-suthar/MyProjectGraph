<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_grey"
            android:layout_weight="1.2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp">


            <TextView
                android:id="@+id/txt_VerticalBandSaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VERTICAL BAND SAW"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_VerticalBandSaw"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/machine"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="50dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:id="@+id/intro_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum_dolor_sit_amet_consectetuer_adipiscing_elit_sed_diam_nonummy_nibh_euismod_tincidunt_ut_laoreet_dolore_magna_aliquam_erat_volutpat_ut_wisi_enim_ad_minim_veniam_quis_nostrud_exerci_tation_ullamcorper_suscipit_lobortis_nisl_ut_aliquip_ex_ea_commodo_consequat_duis_autem_vel_eum"
                    android:layout_weight="0.9"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_30dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_weight="1.1"
                    android:src="@drawable/ic_backarrow"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/intro_Layout"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_20dp">


                <TextView
                    android:layout_width="@dimen/size_90dp"
                    android:layout_height="match_parent"
                    android:background="@color/purple"
                    android:layout_weight="1.9"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_weight="0.1">

                <LinearLayout
                    android:id="@+id/layout_ClassRequired"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Classes Required"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="INTRODUCTION TO WOOD BASICS"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_Material"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_below="@id/layout_ClassRequired">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Materials"
                        android:textColor="@color/white"
                        android:layout_weight="1.5"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WOOD"
                        android:textColor="@color/white"
                        android:layout_weight="0.5"
                        android:layout_marginStart="@dimen/size_3dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_below="@id/layout_Material">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Popular products:"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FURNITURE"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_3dp"/>

                </LinearLayout>
            </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>